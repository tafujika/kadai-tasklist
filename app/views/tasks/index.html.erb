<% if logged_in? %>
  <h1><%= current_user.name %> のタスク一覧</h1>
  
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
    <% end %>
  </ul>
  
  <%== pagy_nav(@pagy) %>

<%= link_to '新規タスクの作成', new_task_path %>

<p><%= link_to 'Logout', logout_path, method: :delete %></p>

<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>Welcome to the Tasklists!!</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>